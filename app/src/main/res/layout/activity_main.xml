<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/AppTheme.Main"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/greeny_blue"
        />
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/unit_2"
            android:id="@+id/container"
            >
            <TextView
                android:id="@+id/request_label"
                android:text="Request :"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="@dimen/unit_1"
                android:background="@color/greeny_blue"
                style="@style/AppTextAppearance.GraphQL.Data.Title"
                />
            <EditText
                android:id="@+id/request"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/request_label"
                android:padding="@dimen/unit_1"
                android:paddingEnd="@dimen/unit_2"
                style="@style/AppTextAppearance.GraphQL.Data"
                android:background="@color/greeny_blue_40"
                />
            <ImageButton
                android:id="@+id/reset_request"
                android:layout_width="@dimen/unit_2"
                android:layout_height="@dimen/unit_2"
                app:layout_constraintEnd_toEndOf="@id/request"
                android:layout_marginEnd="@dimen/unit_1"
                android:background="@drawable/reset_selector"
                app:layout_constraintTop_toTopOf="@id/request"
                app:layout_constraintBottom_toBottomOf="@id/request"

                />

            <TextView
                android:id="@+id/variable_label"
                android:text="Variable :"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/request"
                android:layout_marginTop="4dp"
                android:padding="@dimen/unit_1"
                android:background="@color/greeny_blue"
                style="@style/AppTextAppearance.GraphQL.Data.Title"
                />
            <EditText
                android:id="@+id/variable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/variable_label"
                android:padding="@dimen/unit_1"
                style="@style/AppTextAppearance.GraphQL.Data"
                android:background="@color/greeny_blue_40"
                />

            <TextView
                android:id="@+id/response_label"
                android:text="Response :"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/variable"
                android:layout_marginTop="@dimen/unit_3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="@dimen/unit_1"
                android:background="@color/mango"
                style="@style/AppTextAppearance.GraphQL.Data.Title"
                />
            <TextView
                android:id="@+id/response"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/response_label"
                android:background="@color/mango_40"
                android:padding="@dimen/unit_1"
                style="@style/AppTextAppearance.GraphQL.Data"
                />
        </android.support.constraint.ConstraintLayout>


    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
