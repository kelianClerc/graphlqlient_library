<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pick fields that you need"
        android:padding="@dimen/unit_1"
        android:background="@color/greeny_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/model_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Object : "
        app:layout_constraintTop_toBottomOf="@id/label"
        android:layout_marginTop="@dimen/unit_1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/unit_1"
        />
    <TextView
        android:id="@+id/model_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="PlaceholderModel "
        app:layout_constraintStart_toEndOf="@id/model_label"
        app:layout_constraintTop_toTopOf="@id/model_label"
        android:textColor="@color/greeny_blue"
        android:fontFamily="@style/AppTextAppearance.RobotoMedium"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/model_name"
        app:layout_constraintStart_toStartOf="@id/model_label"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/unit_1"
        />
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/unit_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Validate and go back to previous model"
        />
</android.support.constraint.ConstraintLayout>
