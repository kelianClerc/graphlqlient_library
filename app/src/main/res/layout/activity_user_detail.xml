<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/greeny_blue"
        app:navigationIcon="@drawable/ic_back"
        app:title="User posts"
        app:titleTextColor="@color/white"
        />
    <LinearLayout
        android:id="@+id/header"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/unit_2"
        android:background="@color/greeny_blue_40"
        >
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="KÃ©lian CLERC"
            android:gravity="center_horizontal"
            android:textSize="24sp"
            android:textColor="@color/shark"
            />
        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="kelian.clerc@applidium.com"
            android:gravity="center_horizontal"
            android:textSize="12sp"
            android:textColor="@color/shark"
            android:layout_marginTop="@dimen/unit_1"
            />
        <TextView
            android:id="@+id/since"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Member since 2014"
            android:gravity="center_horizontal"
            android:textSize="12sp"
            android:textColor="@color/orangey_red"
            />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    />
</LinearLayout>
